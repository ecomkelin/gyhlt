extends ../../../aalayout/layout

block content
	.container
		.title #{title}
		hr
		form#objForm(method="post", action="/lgStrmlgUpd", enctype="multipart/form-data")
			input(type="hidden", name="obj[_id]", value=strmlg._id)

			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="codeIpt") 编号
				.col-8.col-sm-10
					input#codeIpt.form-control(type="text", name="obj[code]", value=strmlg.code)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="nomeIpt") 名称
				.col-8.col-sm-10
					input#nomeIpt.form-control(type="text", name="obj[nome]", value=strmlg.nome)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="noteIpt") 备注
				.col-8.col-sm-10
					input#noteIpt.form-control(type="text", name="obj[note]", value=strmlg.note)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="countryIpt") 所属国家
				.col-8.col-sm-10
					input#countryIpt.form-control(type="text", name="obj[country]", value=strmlg.country)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="addrIpt") 地址
				.col-8.col-sm-10
					input#addrIpt.form-control(type="text", name="obj[addr]", value=strmlg.addr)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="respIpt") 负责人
				.col-8.col-sm-10
					input#respIpt.form-control(type="text", name="obj[resp]", value=strmlg.resp)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="telIpt") 电话
				.col-8.col-sm-10
					input#telIpt.form-control(type="text", name="obj[tel]", value=strmlg.tel)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="emailIpt") 邮箱
				.col-8.col-sm-10
					input#emailIpt.form-control(type="text", name="obj[email]", value=strmlg.email)
			hr
			.form-group.row
				label.col-4.col-form-label(for="shelfIpt") 上下架
				.col-8
					select#shelfIpt.form-control(name="obj[shelf]", data-style="btn-info")
						each key in Object.keys(Conf.shelf)
							if key == strmlg.shelf
								-a;
								option(value=key, selected="selected") #{Conf.shelf[key]}
							else
								option(value=key) #{Conf.shelf[key]}
				label.col-4.col-form-label(for="weightIpt") 权重
				.col-8
					input#weightIpt.form-control(type="number", name="obj[weight]", value=strmlg.weight)
			hr
			.form-group.row
				.col-12.text-right
					input.btn.btn-success(type="submit", value="提交")
	script(src="/js/user/lger/strm/strmlgEdit.js")