div(style="height:100px")
.row
	.col-7.pr-5
		img(src=article.photo, width="100%" height="360px" style="object-fit: scale-down;")
		each photo in article.photos
			if photo
				-a;
				div(style="height:180px")
				img.mr-5(src=photo, width="100%" height="360px" style="object-fit: scale-down;")
	.col-5.pl-5
		div(style="height:180px")
		h3.text-center
			a.text-dark(href="/pmArticle/"+article._id) #{article.title}
		div !{article.content}