extends ../../aalayout/layout

block content
	.container.mt-3
		nav(aria-label="breadcrumb")
			ol.breadcrumb
				li.breadcrumb-item: a(href="/") Home
				li.breadcrumb-item.active(aria-current="page") 供应商列表
		.row
			.col-12.col-md-4.col-lg-3.bg-light
				.count
					span 查询条目数:
					span#strmupCount
				.row
					.col-12.input-group
						input.form-control#strmupSearch(type="text", placeholder="搜索系列")
						.input-group-append
							button.btn.btn-outline-secondary(type="button") <span class="oi oi-magnifying-glass"></span>

				hr

				button.btn.btn-success.btn-block.categClick#categAll(type="button") 全部
				each key in Conf.categFirm
					-a;
					button.my-3.btn.btn-default.btn-block.categClick(type="button", data-categ=key.num) #{key.val}
			.col-12.col-md-8.col-lg-9
				.addButton.text-right
					a.btn.btn-warning(href="/bnStrmupAdd") +
				.strmupsList
					input#strmupFilterAjax(type="hidden", value="/usStrmupsAjax?@#strmupsElem@bn")
					//- input#strmupFilterAjax(type="hidden", value="?key=xxx@#strmupsElem")
					#strmupsElem.mt-5

	script(src="/js/dbs/ajaxGet/strmup.js")
	script(src="/js/user/bner/strmup/list.js")
