.row
	.col-6.text-right
		if pdnomes && pdnomes.length > 0
			-a;
			select#pdnomeSel.form-control(data-style="btn-info")
				option(value='') 全部系列
				each pdnome in pdnomes
					-a;
					option(value=pdnome) #{pdnome}
	.col-6.input-group
		input.form-control.pdfirSearch(type="text", placeholder="搜索系列")
		.input-group-append
			button.btn.btn-outline-secondary(type="button") <span class="oi oi-magnifying-glass"></span>